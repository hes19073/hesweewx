#encoding UTF-8
<!DOCTYPE html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>Outside temperature in $station.location</title>
  <link rel="stylesheet" href="https://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
  <script src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
  <script type="text/javascript" src="https://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div data-role="page" data-add-back-btn="true" data-theme="a">
    <div data-role="header">
      <h1>Outside temperature</h1>
    </div>
    <div data-role="content">
      <h4>24h temperature</h4>
      <img src="../daytemp.png"/>
      <ul>
	<li>Today's min: $day($data_binding="weewx_binding").outTemp.min at $day($data_binding="weewx_binding").outTemp.mintime</li>
	<li>Today's max: $day($data_binding="weewx_binding").outTemp.max at $day($data_binding="weewx_binding").outTemp.maxtime</li>
      </ul>
      <h4>7-day temperature</h4>
      <img src="../weektemp.png"/>
      <ul>
	<li>This week's min: $week($data_binding="weewx_binding").outTemp.min at $week($data_binding="weewx_binding").outTemp.mintime</li>
	<li>This week's max: $week($data_binding="weewx_binding").outTemp.max at $week($data_binding="weewx_binding").outTemp.maxtime</li>
      </ul>
    </div>
    <div data-role="footer">
      <h4>weewx v$station.version</h4>
    </div>
  </div>
</body>

